{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "lib": ["esnext", "dom"]
    },
    "include": ["home/**/*.ts", "home/**/*.d.ts", "home/**/*.tsx", "home/**/*.vue"],
    "exclude": ["node_modules"]
  }